{
  "name": "floyd-workspace",
  "version": "0.1.0",
  "description": "FLOYD CLI - AI Coding Agent Workspace",
  "private": true,
  "workspaces": [
    "packages/*",
    "INK/floyd-cli",
    "FloydChromeBuild/floydchrome",
    "FloydDesktopWeb"
  ],
  "workspacesignored": [
    "FloydDesktop"
  ],
  "scripts": {
    "install:all": "npm install && npm run install:core && npm run install:cli && npm run install:web && npm run install:chrome",
    "install:core": "cd packages/floyd-agent-core && npm install",
    "install:cli": "cd INK/floyd-cli && npm install",
    "install:desktop": "echo 'Desktop (Electron) is deprecated - use FloydDesktopWeb instead'",
    "install:web": "cd FloydDesktopWeb && npm install",
    "install:chrome": "cd FloydChromeBuild/floydchrome && npm install",
    "build:core": "cd packages/floyd-agent-core && npm run build",
    "build:web": "cd FloydDesktopWeb && npm run build",
    "dev:web": "cd FloydDesktopWeb && npm run dev"
  },
  "devDependencies": {
    "electron": "^34.0.0",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@types/ws": "^8.18.1",
    "ws": "^8.19.0"
  }
}
