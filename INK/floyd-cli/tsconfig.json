{
	"compilerOptions": {
		"outDir": "dist",
		"target": "ES2020",
		"lib": ["ES2020", "DOM"],
		"skipLibCheck": true,
		"moduleResolution": "bundler",
		"module": "esnext",
		"jsx": "react-jsx",
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"downlevelIteration": true,
		"types": ["node"],
		"baseUrl": ".",
		"paths": {
			"floyd-agent-core": ["../../packages/floyd-agent-core/src"],
			"floyd-agent-core/*": ["../../packages/floyd-agent-core/src/*"]
		}
	},
	"include": ["src"],
	"exclude": ["src/**/__tests__", "**/*.test.ts", "**/*.test.tsx"],
	"references": [
		{ "path": "../../packages/floyd-agent-core", "prepend": false }
	]
}
